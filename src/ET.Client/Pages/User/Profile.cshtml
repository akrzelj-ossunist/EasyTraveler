@page
@model ET.Client.Pages.User.ProfileModel
@{
	ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card">
				<div class="card-header">
					<h3 class="text-center">User Profile</h3>
				</div>
				<div class="card-body">
					<div class="form-group">
						<label for="firstName">First Name:</label>
						<input type="text" id="firstName" class="form-control" readonly value="@Model.User.FirstName">
					</div>
					<div class="form-group">
						<label for="lastName">Last Name:</label>
						<input type="text" id="lastName" class="form-control" readonly value="@Model.User.LastName">
					</div>
					<div class="form-group">
						<label for="email">Email:</label>
						<input type="text" id="email" class="form-control" readonly value="@Model.User.Email">
					</div>
					<div class="form-group">
						<label for="role">Role:</label>
						<input type="text" id="role" class="form-control" readonly value="@Model.User.Role">
					</div>
					<div class="text-center m-4">
						<a class="btn btn-primary m-2" asp-page="/User/Edit" asp-route-id="@Model.User.Id">Edit</a>
						<a class="btn btn-success m-2" asp-page="/User/ChangePassword" asp-route-id="@Model.User.Id">Change Password</a>
						<a class="btn btn-danger m-2" asp-page="/User/Delete" asp-route-id="@Model.User.Id">Delete</a>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
