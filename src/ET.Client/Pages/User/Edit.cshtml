@page
@model ET.Client.Pages.User.EditModel
@{
	ViewData["Title"] = "User Edit";
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card">
				<div class="card-header">
					<h3 class="text-center">User Profile</h3>
				</div>
				<form method="post" class="card-body">
					<div class="form-group">
						<label for="firstName">First Name:</label>
						<input type="text" id="firstName" name="firstName" class="form-control" value="@Model.User.FirstName">
					</div>
					<div class="form-group">
						<label for="lastName">Last Name:</label>
						<input type="text" id="lastName" name="lastName" class="form-control" value="@Model.User.LastName">
					</div>
					<div class="text-center m-4">
						<button type="submit" class="btn btn-primary m-2">Save</button>
						<a class="btn btn-danger m-2" asp-page="/User/Profile">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
