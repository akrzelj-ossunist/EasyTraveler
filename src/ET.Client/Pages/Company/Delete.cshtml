@page
@model ET.Client.Pages.Company.DeleteModel
@{
	ViewData["Title"] = "Delete Account";
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card">
				<div class="card-header">
					<h3 class="text-center">Delete Account</h3>
				</div>
				<div class="card-body">
					<p>Are you sure you want to delete your account?</p>
					<p><strong>This action cannot be undone. Once deleted, your account and all associated data will be permanently removed.</strong></p>
					<form method="post">
						<div class="text-center">
							<button type="submit" class="btn btn-danger">Confirm Delete</button>
							<a class="btn btn-secondary" href="/Company/List">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
